{
  "compilerOptions": {
    "target": "es2020", // target modern JS
    "module": "esnext", // output ES Modules
    "moduleResolution": "node", // resolve modul seperti Node
    "esModuleInterop": true, // supaya bisa import default express
    "forceConsistentCasingInFileNames": true,
    "strict": true, // strict type checking
    "skipLibCheck": true, // skip tipe library untuk compile lebih cepat
    "outDir": "./dist", // hasil compile
    "rootDir": "./src", // source ts
    "sourceMap": true // debugging
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
